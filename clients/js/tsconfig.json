{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true
  },
  "include": [
    "./src/*.js"
  ], // Include all JS files in the root directory
  "exclude": [
    "node_modules",
    "dist"
  ]
}
